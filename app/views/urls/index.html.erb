<p id="notice"><%= notice %></p>

<h1><%= @page.name %></h1>

<%= link_to '新しいURLを追加', new_page_url_path, class:"btn btn-default btn-lg btn-block" %><br>
<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.name %></td>
        <td><%= url.url %></td>
        <td><%= link_to '詳細', page_url_path(@page, url), class:"btn btn-default btn-sm"  %></td>
        <td><%= link_to '編集', edit_page_url_path(@page, url), class:"btn btn-default btn-sm"  %></td>
        <td><%= link_to '削除', page_url_path(@page, url), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-default btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ページ一覧に戻る', page_path(@page) %>

<p id="notice"><%= notice %></p>
<% provide(:title, 'マイページ') %>
<h1>マイページ</h1>

<%= link_to '新しいページを作成', new_page_path, class:"btn btn-default btn-lg btn-block"  %>
<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>Mes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.mes %></td>
        <td><%= link_to '閲覧', page %></td>
        <td><%= link_to '編集', edit_page_path(page) %></td>
        <td><%= link_to '削除', page, method: :delete, data: { confirm: 'Are you sure?' } %><td>
        <td><%= link_to "URLを追加", new_page_url_path(page) %><td>
        <td><%= link_to "画像の更新", allcapture_page_path(page) %><td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

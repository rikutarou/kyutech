<p id="notice"><%= notice %></p>
<% provide(:title, 'マイページ設定') %>
<h1>マイページ設定</h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.mes %></td>
        <td><%= link_to '閲覧', page %></td>
        <td><%= link_to '編集', edit_page_path(page) %></td>
        <td><%= link_to '削除', page, method: :delete, data: { confirm: '本当に削除しますか？' } %><td>
        <td><%= link_to "URLを追加", new_page_url_path(page) %><td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
